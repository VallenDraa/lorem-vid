{
  "name": "lorem-vid",
  "module": "server.ts",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "tailwind": "tailwindcss -i ./src/styles.css -o ./public/styles.css",
    "tailwind:watch": "bun tailwind --watch",
